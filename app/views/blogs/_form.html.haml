- form_for(@blog) do |f|
	- if @blog.errors.any?
		#error_explanation
			%h2
				#{pluralize(@blog.errors.count, "error")} prohibited this blog from being saved:
			%ul
				- @blog.errors.full_messages.each do |msg|
					%li= msg
	.field
		= f.label :url
		%br
		= f.text_field :url
	.field
		= f.label :title
		%br
		= f.text_field :title
	.field
		= f.label :teaser
		%br
		= f.text_area :teaser
	.field
		= f.label :content
		%br
		= f.text_area :content
	.field
		= f.label :published
		%br
		= f.datetime_select :published
	.actions
		= f.submit
