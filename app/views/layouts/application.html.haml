!!! 5
%html
	%head
		%title Virgentech
		= stylesheet_link_tag 'blueprint/screen', :media => 'screen, projection'
		= stylesheet_link_tag 'blueprint/print', :media => 'print'
		/[if lt IE 8]
			= stylesheet_link_tag 'blueprint/ie', :media => 'screen, projection'
		= stylesheet_link_tag 'compiled/main', :media => 'screen, projection'
		= javascript_include_tag :defaults
		= csrf_meta_tag
	%body{:class => body_class}
		.foo= yield :body_class
		%header.global
			= link_to 'Virgen Technologies', '/', :rel => 'home'
			%ul.user-controls
				- if signed_in?
					%li= link_to "Log out", logout_path, :method => :delete
				- else
					%li= link_to "Log in", login_path
					%li= link_to "Register", register_path
		%section#content
			- flash.each do |key, value|
				%div{:class => [flash, key]}
					= value
			= yield
		- if Rails.env.development?
			.debug= debug(params)
		%footer.global.small Copyright &copy; 2011 Hector Virgen. All rights reserved.
